{
  "$schema": "https://playground.wordpress.net/blueprint-schema.json",
  "landingPage": "/wp-admin/post.php?post=4&action=edit",
  "preferredVersions": {
    "php": "8.2",
    "wp": "latest"
  },
  "features": {
    "networking": true
  },
  "steps": [
    {
      "step": "setSiteOptions",
      "options": {
        "blogname": "GatherPress References",
        "blogdescription": "Enhancing GatherPress Events with References.",
        "users_can_register": 1,
        "permalink_structure": "/%year%/%monthnum%/%postname%/"
      }
    },
    {
      "step": "defineWpConfigConsts",
      "consts": {
          "GATHERPRESS_ALPHA_VERSION": 1
      }
    },
    {
      "step": "runPHP",
      "code": "<?php require '/wordpress/wp-load.php'; $user_id = wp_create_user('editor', 'editorpass', 'editor@localhost.test'); (new WP_User($user_id))->set_role('editor');"
    },
    {
      "step": "runPHP",
      "code": "<?php require_once '/wordpress/wp-load.php';\n$page_args = array(\n'post_type'    => 'page',\n'post_status'  => 'publish',\n'post_title'   => 'GatherPress References',\n'post_content' => '<!-- wp:gatherpress/references {\"postType\":\"gatherpress_event\",\"metadata\":{\"name\":\"References\"}} /-->',\n);\n$page_id = wp_insert_post( $page_args, true );\nif ( is_wp_error( $page_id ) ) {\nerror_log( 'addPage error: ' . $page_id->get_error_message() );\n}",
      "progress": {
        "caption": "Crafting a GatherPress References Demo Page"
      }
    },
    {
      "step": "login",
      "username": "admin"
    },
    {
      "step": "updateUserMeta",
      "meta": {
          "admin_color": "modern"
      },
      "userId": 1
    },
    {
      "step": "installPlugin",
      "pluginData": {
          "resource": "wordpress.org\/plugins",
          "slug": "gatherpress"
      },
      "options": {
          "activate": true
      }
    },
    {
      "step": "installPlugin",
      "pluginData": {
        "resource": "git:directory",
        "url": "https://github.com/carstingaxion/gatherpress-references",
        "ref": "HEAD"
      },
      "options": {
        "activate": true
      },
      "progress": {
        "caption": "Installing plugin from GitHub: carstingaxion/gatherpress-references"
      }
    },
    {
      "step": "writeFile",
      "path": "/wordpress/wp-content/plugins/gatherpress-references-demo-data-generator.php",
      "data": {
        "resource": "url",
        "url": "https://gist.githubusercontent.com/carstingaxion/fd8b833d935f69b23e6a081b12a5937a/raw/2c33ebd7588ac83a0a29e576a43e342882b22855/gatherpress-references-demo-data-generator.php"
      }
    },
    {
      "step": "activatePlugin",
      "pluginName": "Demo Data Generator for GatherPress References",
      "pluginPath": "gatherpress-references-demo-data-generator.php"
    },
    {
      "step": "runPHP",
      "code": "<?php require '/wordpress/wp-load.php'; \\GatherPress\\ReferencesDemodata\\Plugin::get_instance()->generate_demo_data();"
    }
  ]
}